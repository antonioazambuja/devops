{
    "variables": {
        "elk_version": "{{env `ELK_VERSION`}}"
    },
    "builders": [
    {
      "type": "docker",
      "image": "ubuntu:18.04",
      "commit": "true",
      "changes": [
        "USER elasticsearch",
        "WORKDIR /home/elasticsearch/elasticsearch-{{user `elk_version`}}",
        "EXPOSE 9200",
        "EXPOSE 9300",
        "ENTRYPOINT [\"/bin/bash\", \"-c\", \"bin/elasticsearch\"]"
      ]
    }],
    "provisioners": [
        {
            "type": "file",
            "source": "./provisioner",
            "destination": "$HOME"
        },
        {
            "type": "shell",
            "inline": ["apt-get update -y && apt-get install python3 -y && apt-get install ansible -y"]
        },
        {
            "type": "ansible-local",
            "playbook_dir": "provisioner",
            "playbook_file": "./provisioner/playbook.yml"
        }
    ],
    "post-processors": [
        [
            {
                "type": "docker-tag",
                "repository": "elasticsearch-{{user `elk_version`}}",
                "tag": "latest"
            }
        ]
    ]
  }